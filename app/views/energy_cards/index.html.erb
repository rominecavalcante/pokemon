<p id="notice"><%= notice %></p>

<h1>Listing Energy Cards</h1>

<table>
  <thead>
    <tr>
      <th>Element</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @energy_cards.each do |energy_card| %>
      <tr>
        <td><%= energy_card.element_type %>
        <td><%= energy_card.quantity %>
        <td><%= link_to 'Show', energy_card %></td>
        <td><%= link_to 'Edit', edit_energy_card_path(energy_card) %></td>
        <td><%= link_to 'Destroy', energy_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

